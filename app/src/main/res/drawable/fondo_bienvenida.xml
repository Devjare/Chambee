<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/amarillo"/>
    <item
        android:top="400dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="#FFF"/>
            <corners
                android:topLeftRadius="400dp"
                android:topRightRadius="400dp"/>
        </shape>
    </item>
    <item
        android:bottom="350dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="@color/colorInicial"
                android:endColor="@color/colorFinal"
                android:angle="0"/>
            <corners
                android:bottomLeftRadius="400dp"
                android:bottomRightRadius="400dp"/>
        </shape>
    </item>

</layer-list>