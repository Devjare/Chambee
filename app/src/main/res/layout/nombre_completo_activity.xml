<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BEBCBC"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#BEBCBC"
            android:src="@drawable/izq_flecha"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#BEBCBC"
            android:text="Datos Personales"
            android:fontFamily="@font/nunito"
            android:textSize="14sp"
            android:textColor="#000000"
            android:gravity="left|center"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/plantilla"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvContrasena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/nunito_semibold"
            android:text="Nombre Completo"
            android:textSize="20sp" />

        <View
            android:layout_below="@+id/tvContrasena"
            android:id="@+id/vRayita"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="#338B8B8B" />

        <LinearLayout
            android:layout_below="@+id/vRayita"
            android:id="@+id/llContrasenaActual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semibold"
                    android:text="Actual"
                    android:textSize="20sp"
                    android:paddingBottom="10dp"/>

                <TextView
                    android:id="@+id/tvNombreActual"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito"
                    android:text="Nombre de Usuario"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_below="@id/llContrasenaActual"
            android:id="@+id/vRayita2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="#338B8B8B" />

        <LinearLayout
            android:id="@+id/llNuevaContrasena"
            android:layout_below="@+id/vRayita3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

        </LinearLayout>

        <View
            android:id="@+id/vRayita3"
            android:layout_below="@id/llConfirmarContrasena"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="#338B8B8B" />

        <LinearLayout
            android:layout_below="@id/vRayita2"
            android:id="@+id/llConfirmarContrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semibold"
                    android:text="Nuevo"
                    android:textSize="20sp"
                    android:paddingBottom="10dp"/>

                <EditText
                    android:id="@+id/etNuevoNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_tag"
                    android:fontFamily="@font/nunito"
                    android:padding="12dp"
                    android:text="Nuevo Uusario"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/vRayita4"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#338B8B8B"/>
            <Button
                android:layout_below="@+id/vRayita4"
                android:layout_marginTop="5dp"
                android:textAllCaps="false"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Listo"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:background="@drawable/item_mensajes"
                android:padding="12dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>