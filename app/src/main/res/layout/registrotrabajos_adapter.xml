<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/item_tag"
        android:layout_margin="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/tvUserpuesto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puesto de trabajo"
            android:fontFamily="@font/nunito_semibold"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tvUserEmpresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EMPRESA"
            android:fontFamily="@font/nunito"
            android:textSize="20sp"
            android:textColor="#00BCD4"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/rbUserCalificacion"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:outlineAmbientShadowColor="#FFEB3B" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(10+)"
                android:textSize="24sp"
                android:textColor="#C4BFBF"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>