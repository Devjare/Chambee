<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvContrasena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/nunito_semibold"
            android:text="Recuperar contraseña"
            android:textSize="20sp" />

        <View
            android:layout_below="@+id/tvContrasena"
            android:id="@+id/vRayita"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="#338B8B8B" />


        <LinearLayout
            android:layout_below="@+id/vRayita"
            android:id="@+id/llContrasenaActual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semibold"
                    android:text="Ingresa el código recibido en tu correo electrónico"
                    android:textSize="20sp"
                    android:paddingBottom="10dp"/>

                <EditText
                    android:id="@+id/etCodigoRecibido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_tag"
                    android:fontFamily="@font/nunito"
                    android:padding="12dp"
                    android:text=""
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_below="@id/llContrasenaActual"
            android:id="@+id/vRayita2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="#338B8B8B" />

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/vRayita4"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#338B8B8B"/>
            <Button
                android:id="@+id/bListoRecuperarContrasena"
                android:layout_below="@+id/vRayita4"
                android:layout_marginTop="5dp"
                android:textAllCaps="false"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Listo"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:background="@drawable/item_mensajes"
                android:padding="12dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
