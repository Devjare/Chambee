<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingTop="15dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llEncabezado"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civFotoPerfilEmpresa"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@color/colorFinal"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvNombreReclutador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:fontFamily="@font/nunito_semibold"
                android:text="Reclutador"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvTiempoPublicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="12sp"
                    android:text="Hace 12 horas"/>
                <LinearLayout
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_star"/>
                    <TextView
                        android:id="@+id/tvInteresados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="15dp"
                        android:text="0"/>
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_comment"/>
                    <TextView
                        android:id="@+id/tvComentariosEmpresa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="3dp"
                        android:text="0"
                        android:textSize="10sp"
                        android:layout_marginEnd="15dp"/>
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_eye"/>
                    <TextView
                        android:id="@+id/tvVistos"
                        android:layout_marginLeft="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="10sp"
                        android:text="0"/>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvEtiquetaPrincipal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:fontFamily="@font/montserrat_regular"
                android:background="@drawable/etiqueta"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Comunicaciones"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llDescripcion"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/llEncabezado"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvNombreTrabajoPublicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Trabajo"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/colorFinal"/>
            <TextView
                android:id="@+id/tvDescripcionPublicacionTrabajo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="12sp"
                android:text="loremLorem Ipsum Lorem IpsumLorem IpsumLorem IpsumLorem IpsumLorem IpsumLorem Ipsum"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/ivImagenPublicacionTrabajo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/fondo_redondeado_azul"/>

    </LinearLayout>

</RelativeLayout>