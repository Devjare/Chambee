<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlBannerChambee"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorFinal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/ivTopLogo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/logo"/>
            <TextView
                android:id="@+id/tvCham"
                android:textColor="@color/blanco"
                android:textSize="18sp"
                android:layout_marginStart="5dp"
                android:text="cham"
                android:fontFamily="@font/montserrat_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tvBee"
                android:textColor="@color/amarillo"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_regular"
                android:text="bee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>
    <ScrollView
        android:layout_below="@+id/rlBannerChambee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp">
        <LinearLayout
            android:padding="20dp"

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvContrasena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="Contraseña"
                android:textSize="20sp" />
            <View
                android:layout_below="@+id/tvContrasena"
                android:id="@+id/vRayita"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="#228B8B8B" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="Nueva contraseña"
                android:layout_marginBottom="5dp"
                android:textSize="18sp" />
            <EditText
                android:inputType="textPassword"
                android:singleLine="true"
                android:id="@+id/etNuevaContrasena"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:hint="Nueva contrasena"
                android:background="@drawable/fondo_redondeado_blanco_contorno"
                />
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="Confirmar contraseña"
                android:layout_marginBottom="5dp"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/etConfirmarNuevaContrasena"
                android:inputType="textPassword"
                android:singleLine="true"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:hint="Confirmar contrasena"
                android:background="@drawable/fondo_redondeado_blanco_contorno"
                />
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:background="#FFF"
        android:id="@+id/rlAvanzar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gris"/>
        <Button
            android:id="@+id/bTerminar"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fondo_degradado_redondeado_azul"
            android:textColor="#FFF"
            android:textAllCaps="false"
            android:text="Terminar"/>
    </RelativeLayout>
</RelativeLayout>
