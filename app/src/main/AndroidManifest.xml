<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gps.chambee">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.actividades.BienvenidaActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.fragmentos.NotificacionesFragment" />
        <activity android:name=".ui.actividades.SolicitarEmpleoActivity" />
        <activity android:name=".ui.actividades.PostRegistroActivity" />
        <activity android:name=".ui.actividades.PublicarTrabajoActivity" />
        <activity android:name=".ui.actividades.PublicacionActivity" />
        <activity android:name=".ui.actividades.postRegistro" />
        <activity android:name=".ui.actividades.RegisterActivity" />
        <activity android:name=".ui.actividades.LoginActivity" />
        <activity android:name=".ui.actividades.SplashScreenActivity">

        </activity>
        <activity android:name=".ui.actividades.MainActivity" />
    </application>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>